{
  "compilerOptions": {
    "lib": ["es2021"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true, 
    "strictPropertyInitialization": false
  }
}
